<style>
    .image-gallery {
        display: flex; /* 使用Flexbox布局 */
        justify-content: space-between; /* 图片之间保持间隔 */
        align-items: center; /* 确保图片垂直居中 */
        margin: 1rem auto; /* 外边距 */
        max-width: 800px; /* 最大宽度 */
    }

    .gallery-image {
        flex: 1; /* 图片占据可用空间 */
        max-width: 100%; /* 最大宽度为容器宽度 */
        margin: 5px; /* 内边距 */
        transition: transform 0.3s ease; /* 平滑过渡效果 */
    }

    .gallery-image:hover {
        transform: scale(1.05); /* 鼠标悬停时放大图片 */
    }

    /* 其他样式... */


	  .user-info {
        position: absolute;
        top: 20px; /* 距离顶部的距离 */
        right: 20px; /* 距离右侧的距离 */
        display: flex;
        align-items: center;
        gap: 10px; /* 链接之间的间隔 */
        font-size: 1.2rem;
        color: #fff; /* 文字颜色 */
    }

    .login-link {
        text-decoration: none; /* 移除下划线 */
        color: inherit; /* 从父元素继承颜色 */
    }

    .user-greeting {
        font-weight: bold;
    }

    /* 鼠标悬浮时的样式 */
    .login-link:hover {
        text-decoration: underline; /* 下划线 */
    }

    /* 媒体查询：适应小屏幕 */
    @media (max-width: 600px) {
        .user-info {
            flex-direction: column;
            align-items: flex-start;
        }
    }
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    body {
        /* 背景图像设置 */
        background-image: url('/public/1.jpg'); /* 替换为你的背景图像路径 */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed; /* 确保背景图像在页面滚动时固定 */
        min-height: 210%;
        font-family: Arial, sans-serif;
        color: #fff;
    }

    main {
        position: relative;
        z-index: 1; /* 确保主要内容在背景之上 */
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        margin: auto;
    }
    
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</a>
